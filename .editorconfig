root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.java]
indent_size = 4
continuation_indent_size = 8
indent_style = tab

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[package.json]
indent_size = 2
indent_style = space
